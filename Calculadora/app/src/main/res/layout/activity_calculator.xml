<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CalculatorActivity"
   >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="gravity"
        android:gravity="right"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_result"
        android:hint="0"
      />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:id="@+id/btn_7"
        android:layout_below="@+id/tv_result"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="79dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:id="@+id/btn_8"
        android:layout_alignTop="@+id/btn_7"
        android:layout_toRightOf="@+id/btn_7"
        android:layout_toEndOf="@+id/btn_7" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:id="@+id/btn_9"
        android:layout_alignTop="@+id/btn_8"
        android:layout_toRightOf="@+id/btn_8"
        android:layout_toEndOf="@+id/btn_8" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:id="@+id/btn_4"
        android:layout_below="@+id/btn_7"
        android:layout_alignRight="@+id/btn_7"
        android:layout_alignEnd="@+id/btn_7" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:id="@+id/btn_5"
        android:layout_below="@+id/btn_7"
        android:layout_toRightOf="@+id/btn_7"
        android:layout_toEndOf="@+id/btn_7" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:id="@+id/btn_6"
        android:layout_below="@+id/btn_9"
        android:layout_toRightOf="@+id/btn_8"
        android:layout_toEndOf="@+id/btn_8" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:id="@+id/btn_1"
        android:layout_below="@+id/btn_4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:id="@+id/btn_2"
        android:layout_below="@+id/btn_5"
        android:layout_toLeftOf="@+id/btn_6"
        android:layout_toStartOf="@+id/btn_6" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:id="@+id/btn_3"
        android:layout_below="@+id/btn_6"
        android:layout_alignRight="@+id/btn_6"
        android:layout_alignEnd="@+id/btn_6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/btn_0"
        android:layout_below="@+id/btn_1"
        android:layout_toLeftOf="@+id/btn_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/btn_punto"
        android:layout_below="@+id/btn_3"
        android:layout_alignRight="@+id/btn_3"
        android:layout_alignEnd="@+id/btn_3"
        android:layout_toRightOf="@+id/btn_2"
        android:layout_toEndOf="@+id/btn_2"
        android:layout_alignBottom="@+id/btn_0" />

    <Button
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:text="+"
        android:id="@+id/btn_suma"
        android:layout_toRightOf="@+id/btn_9"
        android:background="#ff7c87"
        android:layout_alignBottom="@+id/btn_9"
        android:layout_alignTop="@+id/btn_9" />

    <Button
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:text="-"
        android:id="@+id/btn_resta"
        android:layout_toRightOf="@+id/btn_6"
        android:layout_toEndOf="@+id/btn_6"
        android:background="#ff7c87"
        android:layout_alignTop="@+id/btn_6" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="x"
        android:id="@+id/btn_multi"
        android:layout_below="@+id/btn_6"
        android:layout_toRightOf="@+id/btn_3"
        android:layout_toEndOf="@+id/btn_3"
        android:background="#ff7c87" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/btn_resultado"
        android:layout_below="@+id/btn_3"
        android:layout_toRightOf="@+id/btn_punto"
        android:layout_toEndOf="@+id/btn_punto"
        android:background="#ff7c87" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="/"
        android:id="@+id/btn_dividir"
        android:layout_above="@+id/btn_punto"
        android:layout_toRightOf="@+id/btn_3"
        android:layout_toEndOf="@+id/btn_3"
        android:background="#ff7c87" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borrar"
        android:id="@+id/btn_borrar"
        android:layout_below="@+id/btn_0"
        android:layout_toRightOf="@+id/btn_1"
        android:layout_toEndOf="@+id/btn_1" />


</RelativeLayout>
